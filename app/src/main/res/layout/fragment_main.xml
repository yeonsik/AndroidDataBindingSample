<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".DemoActivity"
        >

        <Button
            android:id="@+id/btn_sample_view_binding_bk_activity"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/btn_sample_view_binding_bk_activity"
            />

        <Button
            android:id="@+id/btn_sample_view_binding_activity"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/btn_sample_view_binding_activity"
            />

        <Button
            android:id="@+id/btn_sample_view_binding_bk"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/btn_sample_view_binding_bk"
            />

        <Button
            android:id="@+id/btn_sample_view_binding"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/btn_sample_view_binding"
            />

    </LinearLayout>
</ScrollView>